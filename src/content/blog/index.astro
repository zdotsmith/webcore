---
// src/pages/blog/index.astro
import Layout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog", ({ data }) => !data.draft))
  .sort((a,b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---
<Layout title="Blog | 3D Studio" description="Thoughts on 3D animation and WebGL/Three.js.">
  <h1 class="text-3xl font-extrabold mb-6">Blog</h1>
  <div class="grid md:grid-cols-2 gap-6">
    {posts.map((post) => (
      <a href={`/blog/${post.slug}/`} class="block rounded-xl border bg-white p-6 shadow-sm hover:shadow-md transition dark:bg-gray-800 dark:border-gray-700">
        <h2 class="font-semibold text-xl">{post.data.title}</h2>
        <p class="mt-2 text-gray-600 dark:text-gray-300">{post.data.description}</p>
        <p class="mt-3 text-xs text-gray-500">
          {new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
        </p>
      </a>
    ))}
  </div>
</Layout>